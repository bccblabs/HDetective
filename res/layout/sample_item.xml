<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="2dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/tools">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="16dp">
            <ImageView
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:id="@+id/sample_image"/>
            <TableLayout
                android:layout_margin="5dp"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:background="#99000000"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow>
                    <TextView
                        style="@style/DescStyle"
                        android:textSize="14sp"
                        android:layout_margin="3dp"
                        android:text="@string/date_title"/>
                    <TextView
                        style="@style/EntryStyle"
                        android:textSize="14sp"
                        android:layout_gravity="end"
                        android:textColor="@android:color/background_light"
                        android:layout_margin="3dp"
                        android:id="@+id/date_text"/>
                </TableRow>
                <TableRow>
                    <TextView
                        style="@style/DescStyle"
                        android:textSize="14sp"
                        android:layout_margin="3dp"
                        android:text="@string/serial_code"/>
                    <TextView
                        style="@style/EntryStyle"
                        android:textSize="14sp"
                        android:textColor="@android:color/background_light"
                        android:layout_gravity="end"
                        android:layout_margin="3dp"
                        android:id="@+id/serial_text"/>
                </TableRow>
                <TableRow>
                    <TextView
                        style="@style/DescStyle"
                        android:textSize="14sp"
                        android:layout_margin="3dp"
                        android:text="@string/exam_result"
                        />
                    <TextView
                        style="@style/EntryStyle"
                        android:textSize="14sp"
                        android:textColor="@android:color/background_light"
                        android:layout_margin="3dp"
                        android:layout_gravity="end"
                        android:id="@+id/exam_result_text"/>
                </TableRow>
                <TableRow>
                    <TextView
                        style="@style/DescStyle"
                        android:textSize="14sp"
                        android:layout_margin="3dp"
                        android:text="@string/certainty"/>
                    <TextView
                        style="@style/EntryStyle"
                        android:textSize="14sp"
                        android:textColor="@android:color/background_light"
                        android:layout_margin="3dp"
                        android:layout_gravity="end"
                        android:id="@+id/certainty_text"/>
                </TableRow>
                <TableRow>
                    <TextView
                        style="@style/DescStyle"
                        android:textSize="14sp"
                        android:layout_margin="3dp"
                        android:text="@string/product_name"/>
                    <TextView
                        style="@style/EntryStyle"
                        android:textSize="14sp"
                        android:textColor="@android:color/background_light"
                        android:layout_margin="3dp"
                        android:layout_gravity="end"
                        android:id="@+id/sample_product_name"/>
                </TableRow>
            </TableLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>