<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="80dp">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/hd_image"
            android:layout_gravity="center_vertical"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/hard_disk_holder"
            app:border_color="#FFFFFF"/>
    </LinearLayout>

    <TableLayout
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content">
        <TableRow>
            <TextView
                style="@style/DescStyle"
                android:text="@string/exam_result"
                android:textSize="15dp"
                android:layout_margin="3dp"
                android:layout_gravity="center"
                />
            <TextView
                style="@style/EntryStyle"
                android:textSize="15dp"
                android:layout_margin="3dp"
                android:layout_gravity="center"
                android:id="@+id/classification_result"/>
        </TableRow>
        <TableRow>
            <TextView
                style="@style/DescStyle"
                android:textSize="15dp"
                android:text="@string/certainty"
                android:layout_margin="3dp"
                android:layout_gravity="center"
                />
            <TextView
                style="@style/EntryStyle"
                android:textSize="15dp"
                android:layout_margin="3dp"
                android:layout_gravity="center"
                android:id="@+id/hd_label_prob"/>
        </TableRow>
    </TableLayout>

</LinearLayout>